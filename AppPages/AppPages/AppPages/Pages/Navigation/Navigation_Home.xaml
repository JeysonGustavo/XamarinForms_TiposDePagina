<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPages.Pages.Navigation.Navigation_Home"
             Title="Título da Navigation">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" Icon="Xamarin.png"/>
        <ToolbarItem Text="Detalhes" Icon="Page.png"/>
        <ToolbarItem Text="Ordernar" Icon="Play.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Navigation Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button 
                Text="Ver a próxima página" 
                Clicked="ChangeNavigationPage"/>

            <Button 
                Text="Visualizar Modal" 
                Clicked="ShowModal"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>